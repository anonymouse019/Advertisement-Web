{
  "version": 2,
  "builds": [

    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "outputDirectory": "build"
      }
    },

    {
      "src": "shine-sparkle-backend/server.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [

    {
      "src": "/api/(.*)",   
      "dest": "shine-sparkle-backend/server.js"
    },
  
    {
      "src": "/(.*)",
      "dest": "frontend/build/index.html"
    }
  ]
}